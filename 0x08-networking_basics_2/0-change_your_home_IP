i!/usr/bin/env bash
# Adds IP address to /etc/hosts
#MAke a copy of the host file

cp /etc/hosts ~/hosts.new
#Use sed to replace the ip address
sed -i 's/127.0.0.1/127.0.0.2/' ~/hosts.new
#use sed to add a new ip address at the line 2
sed -i '2i\8.8.8.8 facebook.com' ~/hosts.new
cp -f ~/hosts.new /etc/hosts
